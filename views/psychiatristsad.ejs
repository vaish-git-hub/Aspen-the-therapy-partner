            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 5px;
        }

        .editButton:hover {
            background-color: #286090;
        }

        /* Style for the "Delete" button */
        .deleteButton {
            background-color: #AB7442;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 5px;
        }

        .deleteButton:hover {
            background-color: #c9302c;
        }

        button.addDoctorProfileButton {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
