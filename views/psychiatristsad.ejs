        .psychiatrist-profiles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            /* Adjust the width of each column */
            gap: 20px;
            /* Adjust the gap between each profile */
        }

        .profile {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            overflow: hidden;
            padding: 20px;
            background-color: #fff;
        }

        /* Style for the form inside the therapist1 div */
        .psychiatrist1 .psychiatrist-form {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            border-radius: 8px;
        }

        /* Other styling rules for form elements */
        .psychiatrist1 .psychiatrist-form label {
            display: block;
            margin-bottom: 5px;
        }

        .psychiatrist1 .psychiatrist-form input[type="text"],
        .psychiatrist1 .psychiatrist-form input[type="file"],
        .psychiatrist1 .psychiatrist-form textarea {
