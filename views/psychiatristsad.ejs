<body>
    <%- include('layout/header.ejs') %>
    <button id="toggleForm">Add</button>
    <div class="psychiatrist1" style="display: none;">
        <!-- Add psychiatrist profile form -->
        <form action="/psychiatristsad" method="POST" enctype="multipart/form-data" class="psychiatrist-form">
            <label for="name">Doctor's Name</label>
            <input type="text" id="name" name="name" required>

            <label for="photo">Upload Doctor's Photo</label>
            <input type="file" id="image-upload" name="photo" accept="image/*">
            <div id="image-preview" class="image-preview"></div>

            <label for="bio">Doctor's Bio</label>
            <textarea id="bio" name="bio" required></textarea>

            <button type="submit" class="addDoctorProfileButton">Add Doctor Profile</button>
        </form>
    </div>

    <div class="psychiatrist-profiles-grid">
        <% psychiatrists.forEach(psychiatrist=> { %>
        <div class="profile" data-id="<%= psychiatrist._id %>">
            <% if (psychiatrist.photo && psychiatrist.photo.contentType && psychiatrist.photo.data) { %>
            <img src="data:<%= psychiatrist.photo.contentType %>;base64,<%= psychiatrist.photo.data.toString('base64') %>"
                alt="Psychiatrist Photo" id="psychiatristImage_<%= psychiatrist._id %>">
            <% } else { %>
            <img src="/img-image.jpg" alt="Default Photo" id="psychiatristImage_<%= psychiatrist._id %>">
            <% } %>
            <h2 id="psychiatristName_<%= psychiatrist._id %>">
                <%= psychiatrist.name %>
            </h2>
            <p>Bio: <span id="psychiatristBio_<%= psychiatrist._id %>"><%= psychiatrist.bio %></span>
            </p>
            <!-- Edit and Delete buttons -->
            <button type="button" class="editButton" onclick="showEditForm('<%= psychiatrist._id %>')">Edit</button>
            <button type="button" class="deleteButton" onclick="deletePsychiatrist('<%= psychiatrist._id %>')">Delete</button>
        </div>
        <!-- Form for editing psychiatrist profile -->
        <form id="editForm_<%= psychiatrist._id %>" action="/psychiatristsad/<%= psychiatrist._id %>/edit"
            method="POST" enctype="multipart/form-data" style="display: none;">
            <label for="edit_name_<%= psychiatrist._id %>">Psychiatrist's Name</label>
            <input type="text" id="edit_name_<%= psychiatrist._id %>" name="name" required>

            <label for="edit_photo_<%= psychiatrist._id %>">Upload Psychiatrist's Photo</label>
            <input type="file" id="edit_image-upload_<%= psychiatrist._id %>" name="photo" accept="image/*">
            <div id="edit_image-preview_<%= psychiatrist._id %>" class="image-preview"></div>

            <label for="edit_bio_<%= psychiatrist._id %>">Psychiatrist's Bio</label>
            <textarea id="edit_bio_<%= psychiatrist._id %>" name="bio" required></textarea>

            <button type="submit">Save Changes</button>
        </form>
        <% }); %>
    </div>

    <script>
        // Get the button and form elements
        const toggleButton = document.getElementById('toggleForm');
        const psychiatristForm = document.querySelector('.psychiatrist1');

        // Hide form initially
        psychiatristForm.style.display = 'none';

        // Toggle form visibility on button click
        toggleButton.addEventListener('click', () => {
            psychiatristForm.style.display = (psychiatristForm.style.display === 'none') ? 'block' : 'none';
        });

        // Function to fetch the psychiatrist image and update the UI
        async function fetchPsychiatristImageAndUpdateUI(psychiatristId) {
            try {
                const response = await fetch(`/psychiatristsad/${psychiatristId}/image`);
                if (response.ok) {
                    const imageData = await response.json();
                    const psychiatristImageElement = document.getElementById(`psychiatristImage_${psychiatristId}`);
                    if (psychiatristImageElement) {
                        psychiatristImageElement.src = `data:image/jpeg;base64,${imageData.image}`;
                    }
                } else {
                    throw new Error('Failed to fetch psychiatrist image');
                }
            } catch (error) {
                console.error('Error fetching psychiatrist image:', error);
            }
        }

        // Function to show the edit form and handle form submission
        function showEditForm(psychiatristId) {
            const editForm = document.getElementById(`editForm_${psychiatristId}`);
            if (editForm) {
                editForm.style.display = 'block';

                editForm.addEventListener('submit', async (event) => {
                    event.preventDefault();

                    const formData = new FormData(editForm);

                    try {
                        const response = await fetch(`/psychiatristsad/${psychiatristId}/edit`, {
                            method: 'PUT',
                            body: formData,
                        });

                        if (response.ok) {
                            const data = await response.json();
                            console.log('Updated psychiatrist:', data.psychiatrist);

                            // Update UI with the new psychiatrist data
                            const psychiatristNameElement = document.getElementById(`psychiatristName_${psychiatristId}`);
                            const psychiatristBioElement = document.getElementById(`psychiatristBio_${psychiatristId}`);

                            if (psychiatristNameElement) {
                                psychiatristNameElement.textContent = data.psychiatrist.name;
                            }

                            if (psychiatristBioElement) {
                                psychiatristBioElement.textContent = data.psychiatrist.bio;
                            }

                            // Fetch the updated psychiatrist image and update the UI
                            fetchPsychiatristImageAndUpdateUI(psychiatristId);
                        } else {
                            console.error('Failed to update psychiatrist');
                            // Handle update failure
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }

                    editForm.style.display = 'none';
                });
            } else {
                console.error(`Edit form with ID editForm_${psychiatristId} not found`);
            }
        }

        // Function to delete a psychiatrist
        async function deletePsychiatrist(psychiatristId) {
            try {
                const response = await fetch(`/psychiatristsad/delete/${psychiatristId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    console.log(`Psychiatrist with ID ${psychiatristId} deleted successfully.`);

                    // Remove the deleted psychiatrist from the UI
                    const deletedElement = document.querySelector(`[data-id="${psychiatristId}"]`);
                    if (deletedElement) {
                        deletedElement.remove();
                    }
                } else {
                    console.error('Failed to delete psychiatrist.');
                    // Handle deletion failure - log an error or show a message to the user
                }
            } catch (error) {
                console.error('Error:', error);
                // Handle network errors or exceptions that occurred during the DELETE request
            }
        }

    </script>

    <%- include('layout/footer.ejs') %>
</body>
