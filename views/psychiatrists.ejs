            margin-right: 10px;
            justify-content: center;

        }

        .container8 #toggle-form {
            background-color: #AB7442;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .container8 #add-doctor-form {
            display: none;
            margin-top: 20px;
        }

        .container8 #add-doctor-form label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
        }

        .container8 #image-upload {
            margin-top: 10px;
        }

        .container8 .image-preview {
            margin-top: 10px;
