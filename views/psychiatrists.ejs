        <a href="/book" class="book-button">Book an appointment</a>
        <div class="container8">
            <a href="/doctor_schedule" class="book-button">Scheduled Appointments</a>
            <div class="container8">
                <!-- Button to toggle the therapist's profile form -->
                <button id="toggle-form" class="book-button">Add Profile</button>
                <!-- Form for adding a therapist's profile (Initially hidden) -->
                <div id="add-doctor-form" style="display: none;">
                    <form action="/psychiatrists" method="POST" enctype="multipart/form-data">

                        <label for="name">Doctor's Name</label>
                        <input type="text" id="name" name="name" required>

                        <label for="photo">Upload Doctor's Photo</label>

                        <input type="file" id="image-upload" name="photo" id="photo" accept="image/*">
                        <div id="image-preview" class="image-preview"></div>

                        <label for="bio">Doctor's Bio</label>
                        <textarea id="bio" name="bio" required></textarea>

                        <button type="submit" class="book-button">Add Doctor Profile</button>
                    </form>
                    <% if (success && success.length> 0) { %>
                        <div class="alert alert-success">
                            <%= success[0] %>
                        </div>
                        <% } %>

                            <% if (error && error.length> 0) { %>
                                <div class="alert alert-danger">
                                    <%= error[0] %>
                                </div>
                                <% } %>

                </div>
            </div>
            <div class="con">
                <div class="container2">
                    <% psychiatrists.forEach(Psychiatrist=> { %>
                        <div class="profile">
                            <% if (Psychiatrist.photo && Psychiatrist.photo.contentType && Psychiatrist.photo.data) { %>
                                <img src="data:<%= Psychiatrist.photo.contentType %>;base64,<%= Psychiatrist.photo.data.toString('base64') %>"
                                    alt="Psychiatrist Photo">
                                <% } else { %>
                                    <img src="/img-image.jpg" alt="Default Photo">
                                    <% } %>
